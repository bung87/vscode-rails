{
    "name": "rails",
    "displayName": "Rails",
    "description": "Ruby on Rails support for Visual Studio Code",
    "version": "0.17.8",
    "publisher": "bung87",
    "icon": "rails.png",
    "engines": {
        "vscode": "^1.43.0",
        "node": ">=15.0.0"
    },
    "galleryBanner": {
        "color": "#c52f24",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bung87/vscode-rails.git"
    },
    "homepage": "https://github.com/bung87/vscode-rails",
    "license": "SEE LICENSE IN LICENSE.md",
    "bugs": {
        "url": "https://github.com/bung87/vscode-rails/issues"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "keywords": [
        "rails",
        "ROR",
        "Ruby on Rails",
        ".erb"
    ],
    "activationEvents": [
        "onCommand:rails-nav",
        "onLanguage:ruby",
        "workspaceContains:**/Gemfile"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "menus": {
            "commandPalette": [
                {
                    "command": "Rails:Document",
                    "when": "editorHasSelection"
                }
            ]
        },
        "commands": [
            {
                "command": "erb.formatting",
                "title": "Format erb Files"
            },
            {
                "command": "Rails:Navigation",
                "title": "Rails:Navigation"
            },
            {
                "command": "Rails:Document",
                "title": "Rails:Document"
            }
        ],
        "keybindings": [
            {
                "command": "Rails:Navigation",
                "key": "Alt+."
            },
            {
                "command": "Rails:Document",
                "key": "Alt+F1"
            }
        ],
        "snippets": [
            {
                "language": "js.erb",
                "path": "./snippets/js.erb.json"
            },
            {
                "language": "html.erb",
                "path": "./snippets/html.erb.json"
            },
            {
                "language": "slim",
                "path": "./snippets/slim.json"
            },
            {
                "language": "css.erb",
                "path": "./snippets/css.erb.json"
            },
            {
                "language": "scss.erb",
                "path": "./snippets/scss.erb.json"
            },
            {
                "language": "ruby",
                "path": "./snippets/ruby.json"
            }
        ],
        "languages": [
            {
                "id": "html.erb",
                "aliases": [
                    "html.erb"
                ],
                "extensions": [
                    ".html.erb",
                    ".rhtml",
                    ".rhtm"
                ],
                "configuration": "./language-configuration-erb.json"
            },
            {
                "id": "js.erb",
                "aliases": [
                    "js.erb"
                ],
                "extensions": [
                    ".js.erb"
                ]
            },
            {
                "id": "css.erb",
                "aliases": [
                    "css.erb"
                ],
                "extensions": [
                    ".css.erb"
                ]
            },
            {
                "id": "scss.erb",
                "extensions": [
                    ".scss.erb"
                ]
            }
        ],
        "grammars": [
            {
                "language": "html.erb",
                "scopeName": "text.html.erb",
                "path": "./syntaxes/erb.cson.json",
                "embeddedLanguages": {
                    "source.css": "css",
                    "source.html": "html",
                    "source.js": "javascript",
                    "source.ruby": "ruby"
                }
            },
            {
                "language": "js.erb",
                "scopeName": "source.js.erb",
                "path": "./syntaxes/js.erb.tmLanguage"
            },
            {
                "language": "scss.erb",
                "scopeName": "source.scss",
                "path": "./syntaxes/scss.tmLanguage"
            },
            {
                "language": "css.erb",
                "scopeName": "source.scss",
                "path": "./syntaxes/scss.tmLanguage"
            }
        ]
    },
    "scripts": {
        "clean": "rm -rf out/",
        "dist": "rollup -c rollup.config.ts",
        "format": "prettier --write \"{src,__tests__}/**/*.ts\" --single-quote --trailing-comma es5",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lintFormat": "yarn lint && yarn format",
        "vscode:prepublish": "yarn lintFormat && yarn dist",
        "compile": "yarn dist",
        "watchbundled": "rollup -c -w rollup.config.js",
        "watch": "tsc -p . -w "
    },
    "extensionDependencies": [
        "bung87.vscode-gemfile",
        "sianglim.slim"
    ],
    "devDependencies": {
        "@rollup/plugin-commonjs": "^13.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^8.0.1",
        "@types/js-beautify": "^1.13.3",
        "@types/micromatch": "^4.0.2",
        "@types/node": "^15",
        "@types/vscode": "^1.43.0",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "eslint": "^8.12.0",
        "husky": "^4.3.6",
        "prettier": "^2.0.5",
        "rollup": "^2.70.1",
        "rollup-plugin-typescript2": "^0.27.1",
        "terser": "^4.7.0",
        "typescript": "^4.6.3",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "compact-prefix-tree": "^2.0.2",
        "globify-gitignore": "^0.2.1",
        "has-own-prop": "^2",
        "inflection2": "^2.0.1",
        "is_js": "^0.9.0",
        "js-beautify": "^1.14.10",
        "micromatch": "^4.0.5",
        "path-exists": "^4.0.0",
        "repeat-string": "^1.6.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lintFormat"
        }
    }
}
