{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "esnext",
        "outDir": "dist",
        "resolveJsonModule":true,
        "strictBindCallApply": true,
        "lib": [
            "esnext"
        ],
        "moduleResolution": "node",
        "sourceMap": false,
        "rootDir": "src",
        "allowSyntheticDefaultImports":true,
        "esModuleInterop":true
    },

    "exclude": [
        "bin",
        "node_modules",
        ".vscode-test",
        "test",
        "rollup.config.ts"
    ]
}
